{
  "manifest_version": 2,

  "name": "Quick Translate",
  "description": "Chrome Extension to translate a word or phrase by just highlighting that specific part",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],

  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ]
}
